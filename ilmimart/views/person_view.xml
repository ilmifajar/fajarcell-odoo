<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ilmimart.person tree view -->
    <record id="ilmimart_person_view_tree" model="ir.ui.view">
        <field name="name">ilmimart.view.tree</field>
        <field name="model">ilmimart.person</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="alamat"/>
                <field name="tgl_lahir"/>
            </tree>
        </field>
    </record>

    <!-- ilmimart.person form view -->
    <record id="ilmimart_person_view_form" model="ir.ui.view">
        <field name="name">ilmimart.person.view.form</field>
        <field name="model">ilmimart.person</field>
        <field name="arch" type="xml">
            <form string="nama">
                <sheet>
                    <group name="nama" string="nama">
                        <field name="name"/>
                    </group>
                    <group name="data" string="data">
                        <field name="alamat"/>
                        <field name="tgl_lahir"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
