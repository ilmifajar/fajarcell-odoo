<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="produk_datang_view_form_wizzard" model="ir.ui.view">
        <field name="name">kedatangan barang</field>
        <field name="model">fajarcell.produkdatang</field>
        <field name="arch" type="xml">
            <form string="form kedatangan produk">
                <group>
                    <field name="produk_id"/>
                    <field name="jumlah"/>
                </group>
                <footer>
                    <button name="button_produk_datang" type="object" string="input barang" class="btn btn-warning"/>
                    <button string="cancel" special="cancel" class="btn btn-danger"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- model.name action window -->
    <record id="produk_datang_action_wizzard" model="ir.actions.act_window">
        <field name="name">kedatangan produk</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">fajarcell.produkdatang</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="produk_datang_view_form_wizard"/>
        <field name="target">new</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem 
        id="produk_datang_menu_action_wizzard"
        name="Input Barang"
        parent="fajarcell_menu_root"
        action="produk_datang_action_wizzard"
        sequence="48"/>

</odoo>